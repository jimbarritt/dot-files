[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[alias]
        sm = submodule
	st = status
	br = branch
        serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
        
        lol = log --format='* %C(yellow) %h %Creset %<(25)%an %<(60)%s %cd %GK' --date=iso
        
[push]
	default = matching

[core]
        pager = $(brew --prefix git)/share/git-core/contrib/diff-highlight/diff-highlight | less
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
